TC - O(n)

class Solution
{
    public boolean findPair(int arr[], int size, int n)
    {
       Arrays.sort(arr);
       int i=0, j=1;
       while(i<size && j<size){
           if(arr[j]-arr[i]==n && j!=i) return true;
           else if(arr[j]-arr[i] > n) i++;
           else j++;
       }
       return false;
        
    }
}
